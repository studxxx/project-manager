{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
        <li class="breadcrumb-item"><a href="{{ path('profile') }}">Profile</a></li>
        <li class="breadcrumb-item active">Email</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-success" type="submit">Set Email</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}